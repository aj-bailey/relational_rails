<div class="container">
  <div class="container_items">
    <h1><%= @brewery.name %></h1>

    <p>Brewery ID: <%= @brewery.id %></p>
    <p>Barrel Program: <%= @brewery.barrel_program %></p>
    <p>Number of Taps: <%= @brewery.num_taps %></p>
    <p>Created at: <%= @brewery.created_at %></p>
    <p>Updated at: <%= @brewery.updated_at %></p>
    <p>Number of Beers: <%= @brewery.num_beers %>
    <br>
    <p><%= link_to("#{@brewery.name}'s Beer", "/breweries/#{@brewery.id}/beers") %></p>
    <p><%= link_to("Update Brewery", "/breweries/#{@brewery.id}/edit") %>
    <p><%= link_to("Delete Brewery", "/breweries/#{@brewery.id}", method: :delete)%></p>
  </div>
</div>