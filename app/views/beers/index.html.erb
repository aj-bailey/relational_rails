<div class="container">
  <% @beers.each do |beer| %>
    <div class="container_items">
      <h2>Beer ID: <%= beer.id %></h2>
      <p>Style: <%= beer.style %></p>
      <p>ABV: <%= beer.abv %></p>
      <p>Nitro: <%= beer.nitro %></p>
      <p>Brewery ID: <%= beer.brewery_id %></p>
      <p>Created at: <%= beer.created_at %></p>
      <p>Updated at: <%= beer.updated_at %></p>
      <p>
        <%= link_to "Edit Beer", "/beers/#{beer.id}/edit" %> ||
        <%= link_to "Delete Beer", "/beers/#{beer.id}", method: :delete %>
      </p>
    </div>
    <%# <br> %>
  <%end%>


  <div class="container_items">
    <p><%= link_to "Show Nitro Beers", "/beers?find=nitro_beers"%></p>
    <%= form_with url: "/beers", method: :get, local: true do |form| %>
      <%= form.label :exact_match, "Search exact style: " %>
      <%= form.text_field :exact_match %>
      <%= form.submit "Search Exact" %>
    <% end %>
    <br>
    <%= form_with url: "/beers", method: :get, local: true do |form| %>
      <%= form.label :partial_match, "Search partial style: " %>
      <%= form.text_field :partial_match %>
      <%= form.submit "Search Partial" %>
    <% end %>
  </div>
</div>